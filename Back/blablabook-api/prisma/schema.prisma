generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Role {
  id   Int    @id @default(autoincrement()) @db.SmallInt
  name String @unique @db.VarChar(50)

  users User[]

  @@map("role")
}

model User {
  id          Int      @id @default(autoincrement()) @db.SmallInt
  username    String   @unique @db.VarChar(64)
  email       String   @unique @db.VarChar(255)
  password    String   @db.VarChar(64)
  isPrivate   Boolean  @default(false)
  description String?  @db.Text
  profilePicture String? @db.VarChar(500)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  roleId Int @db.SmallInt
  role   Role @relation(fields: [roleId], references: [id])

  userBooks UserBook[]
  comments  Comment[]
  rates     Rate[]

  @@map("user")
}

model Book {
  id              Int      @id @default(autoincrement()) @db.SmallInt
  title           String   @db.VarChar(255)
  page_count      Int      @db.SmallInt
  author          String   @db.VarChar(64)
  publishing_date String   @db.VarChar(36)
  summary         String?  @db.Text
  publisher       String?  @db.VarChar(64)
  isbn            String?  @unique @db.VarChar(13)
  cover           String?  @db.VarChar(255)
  averageRating   Float    @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  userBooks UserBook[]
  comments  Comment[]
  rates     Rate[]
  

  @@map("book")
}

model UserBook {
  id        Int                @id @default(autoincrement()) @db.SmallInt
  status    UserBookStatusEnum @default(NOT_READ)
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt

  userId Int @db.SmallInt
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  bookId Int @db.SmallInt
  book   Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId])
  @@map("userbook")
}

model Comment {
  id            Int               @id @default(autoincrement()) @db.SmallInt
  title         String            @db.VarChar(255)
  reportCounter Int               @default(0)
  content       String            @db.Text
  date          DateTime          @default(now())
  status        CommentStatusEnum @default(ACTIVE)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  userId Int @db.SmallInt
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  bookId Int @db.SmallInt
  book   Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([bookId])
  @@map("comment")
}

model Rate {
  id     Int   @id @default(autoincrement()) @db.SmallInt
  rating Int   @db.SmallInt

  userId Int @db.SmallInt
  bookId Int @db.SmallInt
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book   Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId])
  @@map("rate")
}

enum UserBookStatusEnum {
  READ
  READING
  NOT_READ

  @@map("userbook_status")
}

enum CommentStatusEnum {
  ACTIVE
  REPORTED
  HIDDEN

  @@map("comment_status")
}
